    "@types/react-dom": "18.x",
    "autoprefixer": "^10.4.22",
    "identity-obj-proxy": "3.x",
    "jest": "29.x",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
